/* pages/index/setting/setting.wxss */
.content{
  width: 630rpx;
  margin: 0 auto;
  overflow: hidden;
}
.content .setting{
  font-size:40rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin: 58rpx 0;
}
.content .line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 53rpx 0 36rpx 0;
  border-bottom: 1px solid #EAEAEA;
  font-size:32rpx;
  color:rgba(51,51,51,1);
}
.content .line .line-content{
  display: flex;
  align-items: center;
}
.content .line .line-content image{
  width:12rpx;
  height:20rpx;
  margin-left: 26rpx;
}
.content .line .line-content text{
  font-size:32rpx;
  color:rgba(102,102,102,1);
}
.red{
  color: #FF2020!important;
}
.blue{
  color: #25A1FF!important;
}

.mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask .alert{
  position: absolute;
  width:630rpx;
  height:291rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 3px 9px 0px rgba(0, 0, 0, 0.3);
  border-radius:18rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.mask .alert .title{
  width: 100%;
  height: 192rpx;
  font-size:36rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:192rpx;
  text-align: center;
}
.mask .alert .button{
  display: flex;
  justify-content: space-between;
}
.mask .alert .button view{
  width: 50%;
  height: 102rpx;
  text-align: center;
  line-height: 102rpx;
  font-size:34rpx;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.mask .alert .button view:nth-child(1){
  border-top: 1px solid #EAEAEA;
}
.mask .alert .button view:nth-child(2){
  background: #25A1FF;
  color: #fff;
  border-bottom-right-radius: 18rpx;
}