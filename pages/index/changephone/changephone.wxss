/* pages/index/setting/setting.wxss */
.content{
  width: 630rpx;
  margin: 0 auto;
  overflow: hidden;
}
.content .setting{
  font-size:40rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin: 58rpx 0;
}
.content .line{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 53rpx 0 36rpx 0;
  border-bottom: 1px solid #EAEAEA;
  font-size:32rpx;
  color:rgba(51,51,51,1);
}
.content .line .line-content{
  display: flex;
  align-items: center;
}
.content .line .line-content image{
  width:12rpx;
  height:20rpx;
  margin-left: 26rpx;
}
.content .line .line-content text{
  font-size:32rpx;
  color:rgba(102,102,102,1);
}
.red{
  color: #FF2020!important;
}
.blue{
  color: #25A1FF!important;
}
.verification{
  width: 100%;
}
.getverification{
  min-width:137rpx;
  font-size:28rpx;
  color:rgba(102,102,102,1);
}
.next-step{
  width:630rpx;
  height:88rpx;
  text-align: center;
  line-height: 88rpx;
  margin-top: 88rpx;
  color: #FFFFFF;
  background:rgba(37,161,255,0.6);
  border-radius:4px;
}