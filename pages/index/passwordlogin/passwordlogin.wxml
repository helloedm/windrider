<view class="passwordlogin">
    <view class="password_login">密码登录</view>
    <view class="phone_login" bindtap="phonelogin">手机验证登录</view>
</view>
  
<view class="phone_haschecked" style='margin-top:77rpx;'>
  <input  placeholder="请输入已验证的手机号" placeholder-style="color:#ccc;font-size:32rpx;" value='{{phone}}' bindinput="operateInput" bindblur='checkData' data-prop="phone"/>
</view>
<view class="phone_haschecked" style='margi-top:17rpx;'>
  <input  password  placeholder="请输入密码" placeholder-style="color:#ccc;font-size:32rpx;" value='{{password}}' bindinput="operateInput" bindblur='checkData' data-prop="password"/>
</view>

