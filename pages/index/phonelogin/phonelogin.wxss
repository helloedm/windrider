.passwordlogin{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 72rpx;
    font-size:40rpx;
    font-weight:bold;
    color:rgba(51, 51, 51, 1);
    padding: 0 61rpx 0 59rpx;
}
.passwordlogin .phone_login{
    font-size:30rpx;
    font-weight:500;
    color:rgba(102, 102, 102, 1);
    display: flex;
    align-items: center;
}
.passwordlogin .phone_login:after {
    margin-left: 6rpx;
    content: '';
    display: inline-block;
    width: 12rpx;
    height: 12rpx;
    border-top: 1px solid #656565;
    border-right: 1px solid #656565;
    transform: rotate(45deg);
    webkit-transform: rotate(-45deg);
} 
.phone_haschecked{
    width: 630rpx;
    height: 102rpx;
    margin: 0 auto;
    border-bottom: 1px solid #EAEAEA;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.phone_haschecked .getcode{
  width: 180rpx;
  height: 100%;
  line-height: 102rpx;
  font-size:28rpx;
  font-weight:500;
  color:rgba(102,102,102,1);
  text-align: center;
}
.phone_haschecked input{
    width: 100%;
}
.enter{
  width:630rpx;
  height:88rpx;
  background:rgba(37,161,255,1);
  opacity:0.6;
  border-radius:4px;
  margin: 0 auto;
  margin-top: 88rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  font-size: 34rpx;
}
.password-forget{
  width:630rpx;
  font-size:26rpx;
  margin: 0 auto;
  margin-top: 47rpx;
  color:rgba(153,153,153,1);  
}
.become-ride{
  width:630rpx;
  font-size:30rpx;
  font-weight:500;
  color:rgba(37,161,255,1);
  margin: 0 auto;
  margin-top: 482rpx;
  display: flex;
  align-items: center;
}
.become-ride:after {
    margin-left: 6rpx;
    content: '';
    display: inline-block;
    width: 12rpx;
    height: 12rpx;
    border-top: 1px solid rgba(37,161,255,1);
    border-right: 1px solid rgba(37,161,255,1);
    transform: rotate(45deg);
    webkit-transform: rotate(-45deg);
} 