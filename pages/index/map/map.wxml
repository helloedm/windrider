<view class="page-body">
  <view class="page-section page-section-gap">
    <map
      id="myMap"
      scale="13"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      polyline="{{polyline}}"
      show-location
      show-compass
      bindmarkertap="markertap"
      controls="{{controls}}" 
    ></map>
  </view>
